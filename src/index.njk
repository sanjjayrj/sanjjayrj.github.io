        <time datetime="{{ post.date | dateFormat }}">{{ post.date | dateFormat }}</time>
        <h3>{{ post.data.title }}</h3>
        <p>{{ post.data.excerpt }}</p>
        <a href="{{ post.url }}" class="card-link">Read More</a>
      </div>
      {% endfor %}
    </div>

    <div class="blog-section-footer reveal">
      <a href="/blog/" class="btn">All Posts</a>
    </div>
  </div>
</section>

