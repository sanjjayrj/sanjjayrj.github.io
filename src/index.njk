{# ===== HERO ===== #}
<section class="section hero" id="hero">
  <canvas class="hero-canvas" id="matrix-canvas"></canvas>
  <div class="container hero-content">
    <p class="hero-greeting mono">> sanjay.init()</p>
    <h1 class="hero-name">{{ site.name }}<span class="cursor"></span></h1>
    <p class="hero-title">{{ site.title }}</p>
    <p class="hero-description">
      {{ site.description }}
    </p>
    <div class="hero-cta">
      <a href="#projects" class="btn btn-filled">View Work</a>
      <a href="{{ site.github }}" target="_blank" rel="noopener" class="btn"><i class="fab fa-github"></i> GitHub</a>
      <a href="{{ site.linkedin }}" target="_blank" rel="noopener" class="btn"><i class="fab fa-linkedin"></i> LinkedIn</a>
    </div>
  </div>
  <div class="hero-scroll">
    <span>scroll</span>
    <span>&darr;</span>
  </div>
</section>

{# ===== ABOUT ===== #}
<section class="section" id="about">
  <div class="container">
    <span class="section-label reveal">01</span>
    <h2 class="section-title reveal">about</h2>
    <div class="about-grid">
      <div class="about-text reveal">
        {% for paragraph in about.bio %}
        <p>{{ paragraph | safe }}</p>
        {% endfor %}
        <div class="about-facts">
          {% for fact in about.facts %}
          <div class="about-fact">{{ fact }}</div>
          {% endfor %}
        </div>
        <a href="/files/Sanjay_Raju_Resume.pdf" target="_blank" rel="noopener" class="btn btn-resume"><i class="fas fa-download"></i> Resume</a>
      </div>
      <div class="about-image reveal-right">
        <img src="/images/about_cutout.png" alt="{{ site.name }}" loading="lazy">
      </div>
    </div>
  </div>
</section>

{# ===== EXPERIENCE ===== #}
<section class="section" id="experience">
  <div class="container">
    <span class="section-label reveal">02</span>
    <h2 class="section-title reveal">experience</h2>

    <div class="timeline">
      {% for job in experience.jobs %}
      <div class="timeline-item reveal">
        <h3 class="timeline-role">{{ job.role }}</h3>
        <p class="timeline-company">{{ job.company }} &middot; {{ job.period }}</p>
        <ul class="timeline-desc">
          {% for bullet in job.bullets %}
          <li>{{ bullet }}</li>
          {% endfor %}
        </ul>
      </div>
      {% endfor %}
    </div>

    {# Education #}
    <h3 class="section-title reveal" style="margin-top: 60px; font-size: 1.25rem;">education</h3>
    <div class="education-grid stagger-children">
      {% for edu in education.entries %}
      <div class="education-card reveal">
        <h4>{{ edu.degree }}</h4>
        <p class="institution">{{ edu.institution }}</p>
        <p class="details">{{ edu.period }}{% if edu.gpa %} &middot; GPA: {{ edu.gpa }}{% endif %}</p>
      </div>
      {% endfor %}
    </div>

    <div class="experience-section-footer reveal">
      <a href="/experience/" class="btn">Skills & Certifications</a>
    </div>
  </div>
</section>

{# ===== PROJECTS ===== #}
<section class="section" id="projects">
  <div class="container">
    <span class="section-label reveal">03</span>
    <h2 class="section-title reveal">projects</h2>

    {# Featured Project #}
    {% for project in projects.items %}
      {% if project.featured %}
      <div class="featured-project reveal">
        <span class="featured-label">Featured Project</span>
        <h3>{{ project.title }}</h3>
        <p class="subtitle">{{ project.subtitle }}</p>
        <p class="description">{{ project.description }}</p>
        <div class="tech-tags">
          {% for tag in project.tags %}
          <span class="tag">{{ tag }}</span>
          {% endfor %}
        </div>
        <ul class="featured-highlights">
          {% for highlight in project.highlights %}
          <li>{{ highlight }}</li>
          {% endfor %}
        </ul>
        <a href="{{ project.detailUrl }}" class="btn">Read More</a>
      </div>
      {% endif %}
    {% endfor %}

    {# Other Projects #}
    <div class="projects-grid stagger-children">
      {% for project in projects.items %}
        {% if not project.featured %}
        <div class="project-card reveal">
          <h3>{{ project.title }}</h3>
          <p>{{ project.description }}</p>
          <div class="tech-tags">
            {% for tag in project.tags %}
            <span class="tag">{{ tag }}</span>
            {% endfor %}
          </div>
          {% if project.detailUrl %}
          <a href="{{ project.detailUrl }}" class="card-link">View Details</a>
          {% endif %}
        </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

{# ===== BLOG ===== #}
<section class="section" id="blog">
  <div class="container">
    <span class="section-label reveal">04</span>
    <h2 class="section-title reveal">blog</h2>

    <div class="blog-posts stagger-children">
      {% for post in collections.posts | limit(3) %}
      <div class="blog-card reveal">
        <time datetime="{{ post.date | dateFormat }}">{{ post.date | dateFormat }}</time>
        <h3>{{ post.data.title }}</h3>
        <p>{{ post.data.excerpt }}</p>
        <a href="{{ post.url }}" class="card-link">Read More</a>
      </div>
      {% endfor %}
    </div>

    <div class="blog-section-footer reveal">
      <a href="/blog/" class="btn">All Posts</a>
    </div>
  </div>
</section>

{# ===== CONTACT ===== #}
<section class="section" id="contact">
  <div class="container">
    <span class="section-label reveal">05</span>
    <h2 class="section-title reveal">contact</h2>

    <div class="contact-terminal reveal">
      <div class="contact-terminal-header">
        <div class="dots">
          <span class="dot"></span>
          <span class="dot"></span>
          <span class="dot"></span>
        </div>
        terminal
      </div>
      <p class="contact-line"><span class="prompt">$ </span>echo $EMAIL</p>
      <p class="contact-line"><a href="mailto:{{ site.email }}">{{ site.email }}</a></p>
      <p class="contact-line" style="margin-top: 16px;"><span class="prompt">$ </span>echo "Let's build something."</p>
      <p class="contact-line" style="color: var(--text-primary);">Let's build something.</p>
      <div class="contact-socials">
        <a href="{{ site.github }}" target="_blank" rel="noopener" aria-label="GitHub"><i class="fab fa-github"></i></a>
        <a href="{{ site.linkedin }}" target="_blank" rel="noopener" aria-label="LinkedIn"><i class="fab fa-linkedin"></i></a>
        <a href="{{ site.twitter }}" target="_blank" rel="noopener" aria-label="Twitter"><i class="fab fa-x-twitter"></i></a>
        <a href="{{ site.instagram }}" target="_blank" rel="noopener" aria-label="Instagram"><i class="fab fa-instagram"></i></a>
      </div>
    </div>
  </div>
</section>
